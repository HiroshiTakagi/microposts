<div class="row">

  <aside class="col-md-3">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-9">
    <h3> <%= @followers.count %> followers</h3>
    <div class="user-pofiles">
      <% @followers.each do |user| %>
        <div class="col-md-3">
          <%= render partial: 'users/user_profile', locals: { user: user} %>
        </div>
      <% end %>
     </div>
  </div>
</div>
