<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= render 'static_pages/search_keywords_form' %>
      <% if @microposts_found %>
        <% if @microposts_found.size > 0 %>
          <h3><%= @microposts_found.size %>  microposts found</h3>
          <ol class="microposts">
            <%= render partial: 'microposts/micropost', collection: @microposts_found  %> 
          </ol>
        <% else %>
          <h3>No  microposts found</h3>
        <% end %>
      <% else %>
        <h3>Microposts feed</h3>
        <%= render 'shared/feed' %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Microposts</h1>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
